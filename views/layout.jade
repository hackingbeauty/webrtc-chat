doctype 5
html
	head
		title= title
		link(rel='stylesheet', href='/stylesheets/normalize.css')
		link(rel='stylesheet', href='/stylesheets/foundation.css', type='text/css')
		link(rel='stylesheet', href='/stylesheets/spa.css', type='text/css')
		link(rel='stylesheet', href='/stylesheets/spa.shell.css', type='text/css')

	body
		header
			div.row
				div.small-12.large-12.columns
					h1.left 
						a(href='/', title='WebRTC Chat') Video Debate
					//- a.right(href='/auth/facebook', title='Sign in with Facebook') Sign in with Facebook
		
		#main
			block content
			.row
				.small-12.large-12
					p Chat
					input#room-name
					button#join-room Join
			.row
				.small-12.large-12
					input#message
					button#send-message Talk

			.row
				.small-12.large-12
					ul#messages

			.row
				.small-6.large-6
					video#local-video(height='180', width='320')
				.small-6.large-6
					video#remote-video(height='180', width='320')

		//- Third Party JavaScript
		script(src='/socket.io/socket.io.js')
		script(src='javascripts/vendor/jquery-2.0.3.js', type='text/javascript')
		script(src='javascripts/vendor/jquery.uriAnchor-1.1.3.js', type='text/javascript')			
		script(src='javascripts/vendor/handlebars-1.0.0.js', type='text/javascript')

		//- Our JavaScript
		script(src='javascripts/namespace.js', type='text/javascript')
		script(src='javascripts/spa.js', type='text/javascript')
		script(src='javascripts/spa.shell.js', type='text/javascript')
		script(src='javascripts/chat_room.js', type='text/javascript')
		script(src='javascripts/lib/rtc_client.js', type='text/javascript')

		//- Initialize the app
		script(type='text/javascript')
			$(function(){
				spa.initModule($('#spa'));
			})();

